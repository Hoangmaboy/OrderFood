

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />

    <!--owl slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
    <!-- nice select  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/css/nice-select.min.css" integrity="sha512-CruCP+TD3yXzlvvijET8wV5WxxEh5H8P4cmz0RFbKK6FlZ2sYl3AEsKlLPHbniXKSrDdFewhbmBK5skbdsASbQ==" crossorigin="anonymous" />
    <!-- font awesome style -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />
    <title>Change Password</title>
   
</head>
<!-- body -->
<body class="main-layout">
    
 
    <div style="margin-top: 100px;" class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img style="width:100%" src="~/images/changepass.png" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-6">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h1 style="font-weight: bold;">Change Password</h1>
                                <p class="mb-4">Change your password here!</p>
                            </div>
                                    <form class="user" action="/Home/DoChangePass" method="POST">
                                        <input type="hidden" name="go" value="ChangeForm" />
                                        <div class="form-group">
                                            <input name="PassNow" type="password" required class="form-control form-control-user"
                                                   value="@ViewBag.oldPa"
                                                   id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Your current password...">
                                        </div>
                                        <div class="form-group">
                                            <input value="@ViewBag.newPa" required name="passNew" type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Your new password">
                                        </div>
                                        <div class="form-group">
                                            <input value="@ViewBag.rePa" required name="re_pass" type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Your new password">
                                        </div>
                                        <input class="btn btn-primary btn-user btn-block" type="submit" name="submit" value="Submit" />
                                    </form>
                                    @if (ViewBag.err is not null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @ViewBag.err
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



   
</body>
</html>




