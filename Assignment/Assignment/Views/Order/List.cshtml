@{
}
@using Assignment.Models
<style>
    h1 {
        text-align: center;
    }

    table tr td {
        border: #000 solid 5px;
    }

    img {
        width: 300px;
    }
</style>
<h1>All Order</h1>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>No</th>
            <th>Payment No</th>
            <th>Payment Mode</th>
            <th>Product</th>
            <th>Product Image</th>
            <th>Quantity</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Order o in ViewBag.orders)
        {
            <tr>
                <td>@o.OrderDetailsId</td>
                <td>@o.OrderNo</td>
                <td>@o.Payment.CardNo</td>
                <td>@o.Payment.PaymentMode</td>
                <td>@o.Product.ProductName</td>
                <td><img src="@o.Product.ImageUrl"/></td>
                <td>@o.Quantity</td>
                <td>@o.Status</td>
            </tr>
        }
    </tbody>
</table>
